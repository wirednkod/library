    "postbuild": "node ./scripts/postbuild.mjs",
    "clear": "rm -rf node_modules dist tsconfig.tsbuildinfo"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
